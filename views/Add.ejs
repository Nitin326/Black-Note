<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://t3.ftcdn.net/jpg/03/26/34/96/240_F_326349650_Wi2twHswE8JIkPfjfNc5hWjQZKbTdtpz.jpg"
        sizes="16x16">
    <title>To-Do</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css" rel="stylesheet" />
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>

    <style>

        body{
            background-image: linear-gradient(to top, #00c6fb 0%, #005bea 100%);
            width: 100%;
            height: 100vh;
        }
        .launchbtn {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>

<body>
    <%- include('./Nav.ejs') %>

        <!-- Button trigger modal -->
        <div class="launchbtn">
            <button type="button" class="btn btn-primary" data-mdb-toggle="modal" data-mdb-target="#exampleModal">
                Add Notes Here
            </button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/add" method="POST">
                            <!-- Title input -->
                            <div class="form-outline mb-4">
                                <input type="name" name="Title" id="form1Example1" class="form-control" required
                                    style="border-bottom: 1px solid rgba(0, 0, 0, 0.438);" />
                                <label class="form-label" for="form1Example1">Email address</label>
                            </div>

                            <!-- Description input -->
                            <div class="form-outline mb-4">
                                <input type="text" name="Description" id="form1Example2" class="form-control" required
                                    style="border-bottom: 1px solid rgba(0, 0, 0, 0.438);" />
                                <label class="form-label" for="form1Example2">Password</label>
                            </div>

                            <button type="button" class="btn btn-primary" data-mdb-dismiss="modal"
                                style="margin: 12px 10px 12px 10px;">Close</button>
                            <button type="submit" class="btn btn-primary"
                                style="margin: 12px 5px 12px 5px;">Save</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>



</body>

</html>